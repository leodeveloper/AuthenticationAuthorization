@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@using Microsoft.Extensions.Localization

@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions
@inject IStringLocalizer<Unified.Authorization.SharedResources> SharedLocalizer
@{ var requestCulture = Context.Features.Get<IRequestCultureFeature>();
                var cultureItems = LocOptions.Value.SupportedUICultures
                    .Select(c => new SelectListItem { Value = c.Name, Text = c.DisplayName })
                    .ToList(); }

@if (Unified.Authorization.Helper.CultureHelper.IsRighToLeft())
{
    <form id="englishLanguage" asp-route-returnUrl="@Context.Request.Path" 
          asp-route-queryParams="@Context.Request.RouteValues" method="post" 
          class="form-horizontal" role="form" asp-page-handler="SetLanguage">

        <input type="hidden" name="culture" value="en-US" />
        <button type="submit" class="button is-dark is-small">@SharedLocalizer["Language"]</button>
    </form> 
}
else
{
    <form id="arabicLanguage" asp-route-returnUrl="@Context.Request.Path" method="post" class="form-horizontal" role="form" asp-page-handler="SetLanguage">
        <input type="hidden" name="culture" value="ar-AE" />
        <button type="submit" class="button is-dark is-small">@SharedLocalizer["Language"]</button>
    </form>
} 